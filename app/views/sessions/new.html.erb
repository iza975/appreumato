<!DOCTYPE html>
<html>
  <head>
    <title>ReumatoApp</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    
    <!-- Adicione o link para o Bootstrap CSS -->
    <%= stylesheet_link_tag "https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" %>
  </head>

  <body>
    <div class="container mt-5">
      <%= yield %>

      <% if logged_in? %>
        <%= link_to 'Sair', logout_path, method: :delete, class: 'btn btn-danger' %>
      <% else %>
        <div class="row">
          <div class="col-md-6 offset-md-3">
            <%= form_with(model: User.new, url: login_path) do |form| %>
              <h2>Login</h2>
              <div class="mb-3">
                <%= form.label :email, "Email address", class: 'form-label' %>
                <%= form.email_field :email, class: 'form-control', id: 'exampleInputEmail1', placeholder: 'Enter email' %>
              </div>
              <div class="mb-3">
                <%= form.label :password, "Password", class: 'form-label' %>
                <%= form.password_field :password, class: 'form-control' %>
              </div>
              <%= form.submit 'Logar', class: 'btn btn-primary' %>
            <% end %>
            <div class="text-center">
              <%= link_to 'Esqueceu a senha?', '#', class: 'btn btn-secondary' %>
              <%= link_to 'Cadastrar Novo UsuÃ¡rio', new_user_path, class: 'btn btn-secondary' %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Scripts JavaScript do Bootstrap e jQuery -->
    <%= javascript_include_tag "https://code.jquery.com/jquery-3.6.0.min.js" %>
    <%= javascript_include_tag "https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js" %>
  </body>
</html>
