<h1>Login</h1>
<%= form_for :session, url: login_path do |f| %>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control', id: 'exampleInputEmail1', placeholder: 'Entre com seu e-mail' %>
  </div>
  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control', id: 'exampleInputPassword1', placeholder: 'Senha' %>
  </div>
  </div>
  <%= f.submit 'Entrar', class: 'btn btn-primary' %>
<% end %>

